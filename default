server {
    listen 8080;
    listen [::]:8080;

    server_name wantam-dpdngqedbvb6bfce.canadacentral-01.azurewebsites.net;
    root /home/site/wwwroot/public;
    index index.php;

    port_in_redirect off;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Laravel Reverb WebSocket client
    location ~ /app/(?<reverbkey>.*) {
        proxy_pass http://127.0.0.1:8123/app/$reverbkey;
        proxy_http_version 1.1;
        proxy_set_header Host $http_host;
        proxy_set_header Scheme $scheme;
        proxy_set_header SERVER_PORT $server_port;
        proxy_set_header REMOTE_ADDR $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
    }

    # Laravel broadcasting to WebSocket server
    location ~ ^/apps/(?<reverbid>[^/]+)/events$ {
        proxy_pass http://127.0.0.1:8123/apps/$reverbid/events$is_args$args;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Handle PHP files
    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_pass 127.0.0.1:9000;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        fastcgi_param QUERY_STRING $query_string;
        fastcgi_intercept_errors on;
    }

    # Deny access to hidden files (e.g. .env, .git)
    location ~ /\.(?!well-known).* {
        deny all;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /home/site/wwwroot/public;
    }
}
